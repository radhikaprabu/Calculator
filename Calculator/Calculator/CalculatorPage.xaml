<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.CalculatorPage"
             Padding ="16">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="100" />
      <RowDefinition Height ="*"/>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    
    <Label x:Name="displayLabel"
           FontSize="Large"
           VerticalOptions="Center"
           HorizontalTextAlignment="End"
           Grid.Row="0"
           Grid.ColumnSpan="4" />
  
    <Button Text="7" Grid.Row="1" Grid.Column="0" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="8" Grid.Row="1" Grid.Column="1" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="9" Grid.Row="1" Grid.Column="2" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="\" Grid.Row="1" Grid.Column="3" Font="Large" Clicked="OnOperationButtonClicked"/>
    <Button Text="4" Grid.Row="2" Grid.Column="0" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="5" Grid.Row="2" Grid.Column="1" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="6" Grid.Row="2" Grid.Column="2" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="*" Grid.Row="2" Grid.Column="3" Font="Large" Clicked="OnOperationButtonClicked"/>
    <Button Text="1" Grid.Row="3" Grid.Column="0" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="2" Grid.Row="3" Grid.Column="1" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="3" Grid.Row="3" Grid.Column="2" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="-" Grid.Row="3" Grid.Column="3" Font="Large" Clicked="OnOperationButtonClicked"/>
    <Button Text="." Grid.Row="4" Grid.Column="0" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="0" Grid.Row="4" Grid.Column="1" Font="Large" Clicked="OnDigitButtonClicked"/>
    <Button Text="=" Grid.Row="4" Grid.Column="2" Font="Large" Clicked="OnEqualButtonClicked"/>
    <Button Text="+" Grid.Row="4" Grid.Column="3" Font="Large" Clicked="OnOperationButtonClicked"/>
    <Button Text="CLR" Grid.Row="5" Grid.ColumnSpan="4" Font="Large" Clicked="OnClearButtonClicked"/>
  </Grid>

</ContentPage>